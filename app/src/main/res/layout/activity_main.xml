<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/cardViewWeb"
        android:backgroundTint="@color/backgroundTint"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        app:cardCornerRadius="30dp">

        <TextView
            android:id="@+id/textViewWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Web"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/cardViewCamera"
    android:backgroundTint="@color/backgroundTint"
    android:layout_gravity="center"
    android:layout_margin="50dp"
    app:cardCornerRadius="30dp">

        <TextView
            android:id="@+id/textViewCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Camera"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/cardViewCall"
        android:backgroundTint="@color/backgroundTint"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        app:cardCornerRadius="30dp">

        <TextView
            android:id="@+id/textViewCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Caller"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>